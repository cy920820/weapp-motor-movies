<!-- pages/userConsole/userConsole.wxml -->
<view class="container">
  <!-- 用户头像面板 -->
  <view class="userinfo">
    <image class="avatar" src="{{avatarUrl}}" mode="scaleToFill"></image>
    <text class="username">{{username}}</text>
  </view>

  <!-- 用户功能列表 -->
  <view class="user-feature">
    <van-cell-group>
      <van-cell title="想看的电影" value="{{numbers}}" is-link />
    </van-cell-group>
  </view>

  <!-- 应用信息 -->
  <view class="app-info">
    <van-cell-group>
      <van-cell title="版本号" value="{{version}}" />
      <van-cell title="联系作者" value="{{email}}" />
    </van-cell-group>
  </view>
</view>
