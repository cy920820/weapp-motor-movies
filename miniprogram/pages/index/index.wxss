/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.tabs {
  width: 100%;
  height: 88rpx;
}

.movie-item {
  display: flex;
  width: 100%;
  padding-left: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.item-l {
  width: 128rpx;
  height: 180rpx;
  position: relative;
  margin-top: 24rpx;
  margin-right: 20rpx;
}

.item-l image{
  width: 100%;
  height: 180rpx;
}

.item-r {
  flex: 1;
  text-align: left;
  padding: 24rpx 28rpx 24rpx 0;
  height: 180rpx;
  max-height: 180rpx;
  position: relative;
  overflow: hidden;
  /* border-bottom: 1px solid #777; */
}

.item-r .title {
  max-height: 48rpx;
  margin-bottom: 8rpx;
  line-height: 48rpx;
  overflow: hidden;
}

.item-r .title text {
  font-size: 34rpx;
  color: #333;
  font-weight: 700;
  padding-right: 10rpx;
}

.item-r .title .rating {
  color: #f03d37;
  font-size: 26rpx;
}

.item-r .rating {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 26rpx;
  color: #666;
}

.item-r .rating .score {
  font-weight: 700;
  color: #faaf00;
  font-size: 30rpx;
}

.item-r .collect_count {
  font-size: 26rpx;
  color: #666;
}

.item-r .collect_count text {
  color: #faaf00;
  font-size: 30rpx;
  font-weight: 600;
  margin-right: 4rpx;
}

.item-r .genres {
  font-size: 24rpx;
}

.item-r .directors {
  font-size: 26rpx;
}

.item-r .casts {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #666;
  margin-top: 6rpx;
}

.item-r .mainland_pubdate {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
  line-height: 30rpx;
}
